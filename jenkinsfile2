pipeline {
    agent any
tools 
{
maven 'M2_HOME'
}
 environment { 

        registry = "waelbannani/tpachat" 

        registryCredential = 'dockerhub' 
        
            
        dockerImage = '' 

    }
    
    stages {
        stage('Checkout GIT') {
            steps {
                git branch:'wael',
                url:'https://github.com/waelbannani22/tpAchatProject'
                
              

            }
        }
        stage('MVN CLEAN')
        {
        steps {
        sh """mvn -version"""
        sh 'mvn clean'
        }
        
        }
           stage('MVN test mock')
        {
        steps {
        sh "mvn clean test -e  -Dtest=com.esprit.examen.services.FactureServiceMockTest"
        }
        }
        //-DfailIfNoTests=false
        
        
       
              stage('MVN INSTALL')
        {
        steps {
        sh 'mvn package -DskipTests '
        }
        }
        
        stage('MVN NEXUS')
        {
        steps {
        sh 'mvn  deploy -DskipTests  '
        }
        }
       //-DskipTests 
      
      stage('MVN SONARQUBE')
        {
        steps{
        sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=esprit'
        }
        }
        
        stage('Docker compose ')
        {
        steps {
        sh 'sudo docker-compose down '
        sh 'sudo docker-compose up -d '
        }
        }
        /*
            stage('MVN test JUNIT')
        {
        steps {
        sh 'mvn  test'
        }
        }
        */
       


       
    }
     post{
        always{
            mail to: "wael.bannani@esprit.tn",
            subject: "Jenkins",
            body: "build finished"
        }
    }
    
    
}

