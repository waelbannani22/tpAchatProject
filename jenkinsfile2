pipeline {
    agent any
tools 
{
maven 'M2_HOME'
}
 environment { 

        registry = "waelbannani/tpachat" 

        registryCredential = 'dockerhub' 
        
            
        dockerImage = '' 

    }
    
    stages {
        stage('Checkout GIT') {
            steps {
                git branch:'wael',
                url:'https://github.com/waelbannani22/tpAchatProject'
                
              

            }
        }
        stage('MVN CLEAN')
        {
        steps {
        sh """mvn -version"""
        sh 'mvn clean'
        }
        
        }
           stage('MVN test mock')
        {
        steps {
        sh "mvn clean test -e  -Dtest=com.esprit.examen.services.FactureServiceMockTest"
        }
        }
        
        
       
              stage('MVN INSTALL')
        {
        steps {
        sh 'mvn package -Denv="test"'
        }
        }
        
        stage('MVN NEXUS')
        {
        steps {
        sh 'mvn  deploy '
        }
        }
       
       
      
        stage('Docker compose ')
        {
        steps {
        sh 'sudo docker-compose down '
        sh 'sudo docker-compose up -d'
        }
        }
            stage('MVN test JUNIT')
        {
        steps {
        sh 'mvn  test'
        }
        }
       


       
    }
    
    
}

