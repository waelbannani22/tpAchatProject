pipeline {
    agent any
tools 
{
maven 'M2_HOME'
}
 environment { 

        registry = "hazem12345/tp-achat-project" 

        registryCredential = 'dockerHub' 

        dockerImage = '' 

    }
    
    stages {
        stage('Checkout GIT') {
            steps {
                git branch:'hazem',
                url:'https://github.com/waelbannani22/tpAchatProject'
                
                script{
                                    Date date = new Date()
String datePart = date.format("dd/MM/yyyy")
String timePart = date.format("HH:mm:ss")

println "date : " + datePart + "\ttime : " + timePart
                }

            }
        }
          stage('MVN CLEAN')
        {
        steps {
        sh """mvn -version"""
        sh 'mvn clean'
        }
        
        }
          stage('MVN TEST MOCK')
        {
        steps {
        sh "mvn clean test -e  -Dtest=com.esprit.examen.services.ProduitServiceMockTest"
        }
        }
        
        
       
        stage('MVN PACKAGE')
        {
        steps {
        sh 'mvn package'
        }
        }  
       
        stage('MVN SONARQUBE')
        {
        steps{
        sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar'
        }
        }
    
        stage('MVN DEPLOY')
        {
        steps {
        sh 'mvn deploy'
        }
        }

        stage('Docker compose ')
        {
        steps {
        sh 'sudo docker-compose down '
        sh 'sudo docker-compose up -d'
        }
        }
            stage('MVN TEST')
        {
        steps {
        sh 'mvn test'
        }
        }
       
       
    }
    post{
        always{
            mail to: "hazem.dawahi@esprit.tn",
            subject: "Jenkins",
            body: "build finished"
        }
    }
     
}

