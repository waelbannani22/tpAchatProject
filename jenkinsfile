pipeline {
    agent any
 
    
    stages {
        stage('Checkout GIT') {
        
            steps {
                git branch:'hazem',
                url:'https://github.com/waelbannani22/tpAchatProject'
             

            }
        }
          stage('MVN CLEAN')
        {
        steps {
        sh """mvn -version"""
        sh 'mvn clean'
        }
        
        }
          stage('MVN TEST MOCK')
        {
        steps {
        sh "mvn clean test -e  -Dtest=com.esprit.examen.services.ProduitServiceMockTest"
        }
        }
        
        
       
        stage('MVN PACKAGE')
        {
        steps {
        sh 'mvn package'
        }
        }  
       
        stage('MVN SONARQUBE')
        {
        steps{
        sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar'
        }
        }
    
        stage('MVN DEPLOY')
        {
        steps {
        sh 'mvn deploy'
        }
        }

          stage('Building our image') { 

            steps { 

        registry "hazem12345/tp-achat-project" 

        registryCredential  'dockerHub' 

        dockerImage  '' 
                script { 

                    dockerImage = docker.build registry + ":$BUILD_NUMBER" 

                }

            } 

        }

        stage('Deploy our image') { 

            steps { 

                script { 

                    docker.withRegistry( '', registryCredential ) { 

                        dockerImage.push() 

                    }

                } 

            }

        } 

        stage('Cleaning up') { 

            steps { 

                sh "docker rmi $registry:$BUILD_NUMBER" 

            }

        } 
        
        stage('Docker compose ')
        {
        steps {
        sh 'sudo docker-compose down '
        sh 'sudo docker-compose up -d'
        }
        }
            stage('MVN TEST')
        {
        steps {
        sh 'mvn test'
        }
        }
       
       
    }
    post{
        always{
            mail to: "hazem.dawahi@esprit.tn",
            subject: "Jenkins",
            body: "build finished"
        }
    }
     
}

